<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CodeBook" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 主题颜色 -->
        <item name="colorPrimary">@color/md_theme_primary</item>
        <item name="colorOnPrimary">@color/md_theme_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_secondaryContainer</item>
        <item name="colorSurface">@color/md_theme_surface</item>
        <item name="colorSurfaceVariant">@color/md_theme_surface_variant</item>
        <item name="colorOnSurface">@color/md_theme_on_surface</item>
        <item name="colorOutline">@color/md_theme_outline</item>

        <!-- 系统栏配置 -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:navigationBarColor">@color/navigation_bar</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">false</item>

        <!-- AppBar 配置 -->
        <item name="appBarLayoutStyle">@style/Widget.App.AppBarLayout.Dark</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar.Dark</item>

        <!-- FAB 配置 -->
        <item name="floatingActionButtonStyle">@style/Widget.App.FloatingActionButton.Dark</item>

        <!-- BottomNavigationView 配置 -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView.Dark</item>

        <!-- Menu 配置 -->
        <item name="popupMenuStyle">@style/Widget.App.PopupMenu.Dark</item>
    </style>

    <!-- 自定义夜间模式 AppBarLayout 样式 -->
    <style name="Widget.App.AppBarLayout.Dark" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">@color/md_theme_surface_container</item>
        <item name="elevation">0dp</item>
    </style>

    <!-- 自定义夜间模式 Toolbar 样式 -->
    <style name="Widget.App.Toolbar.Dark" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/md_theme_surface_container</item>
        <item name="titleTextAppearance">@style/TextAppearance.App.TitleLarge</item>
    </style>

    <!-- 自定义夜间模式 FloatingActionButton 样式 -->
    <style name="Widget.App.FloatingActionButton.Dark" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/md_theme_primary</item>
        <item name="tint">@color/md_theme_onPrimary</item>
    </style>

    <!-- 自定义夜间模式 BottomNavigationView 样式 -->
    <style name="Widget.App.BottomNavigationView.Dark" parent="Widget.Material3.BottomNavigationView">
        <item name="backgroundTint">@color/md_theme_surface</item>
    </style>

    <!-- 自定义夜间模式 PopupMenu 样式 -->
    <style name="Widget.App.PopupMenu.Dark" parent="Widget.Material3.PopupMenu">
        <item name="android:background">@color/md_theme_surface_container</item>
        <item name="android:popupBackground">@color/md_theme_surface_container</item>
    </style>

    <!-- 全屏对话框夜间模式主题 -->
    <style name="Theme.CodeBook.FullScreenDialog" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 继承主题的颜色 -->
        <item name="colorPrimary">@color/md_theme_primary</item>
        <item name="colorOnPrimary">@color/md_theme_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_secondaryContainer</item>
        <item name="colorSurface">@color/md_theme_surface</item>
        <item name="colorOnSurface">@color/md_theme_on_surface</item>
        
        <!-- 对话框窗口配置 -->
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/md_theme_surface</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:navigationBarColor">@color/navigation_bar</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
    </style>
</resources>