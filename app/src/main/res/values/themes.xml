<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.CodeBook" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 主题颜色 -->
        <item name="colorPrimary">@color/md_theme_primary</item>
        <item name="colorOnPrimary">@color/md_theme_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_secondaryContainer</item>
        <item name="colorSurface">@color/md_theme_surface</item>
        <item name="colorSurfaceVariant">@color/md_theme_surface_variant</item>
        <item name="colorOnSurface">@color/md_theme_on_surface</item>
        <item name="colorOutline">@color/md_theme_outline</item>

        <!-- 系统栏配置 -->
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:navigationBarColor">@color/navigation_bar</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>

        <!-- AppBar 配置 -->
        <item name="appBarLayoutStyle">@style/Widget.App.AppBarLayout</item>
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>

        <!-- FAB 配置 -->
        <item name="floatingActionButtonStyle">@style/Widget.App.FloatingActionButton</item>

        <!-- BottomNavigationView 配置 -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>

        <!-- Menu 配置 -->
        <item name="popupMenuStyle">@style/Widget.App.PopupMenu</item>
    </style>

    <!-- 自定义 AppBarLayout 样式 -->
    <style name="Widget.App.AppBarLayout" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">@color/md_theme_surface_container</item>
        <item name="elevation">0dp</item>
    </style>

    <!-- 自定义 Toolbar 样式 -->
    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/md_theme_surface_container</item>
        <item name="titleTextAppearance">@style/TextAppearance.App.TitleLarge</item>
    </style>

    <!-- 自定义 FloatingActionButton 样式 -->
    <style name="Widget.App.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/md_theme_primary</item>
        <item name="tint">@color/md_theme_onPrimary</item>
    </style>

    <!-- 自定义 BottomNavigationView 样式 -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">

        <item name="backgroundTint">@color/md_theme_surface</item>    <!-- 背景颜色 -->
    </style>

    <!-- 自定义 TabLayout 样式 -->
    <style name="Widget.App.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabIndicatorColor">@color/md_theme_primary</item> <!-- 选中项的指示器颜色 -->
        <item name="tabSelectedTextColor">@color/md_theme_primary</item> <!-- 选中文本颜色 -->
        <item name="tabBackground">@color/md_theme_surface_variant</item> <!-- 背景颜色 -->
    </style>

    <!-- 自定义 PopupMenu 样式 -->
    <style name="Widget.App.PopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:background">@color/md_theme_surface</item>
    </style>

    <!-- 自定义标题样式 -->
    <style name="TextAppearance.App.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.CodeBook" parent="Base.Theme.CodeBook" />
</resources>
